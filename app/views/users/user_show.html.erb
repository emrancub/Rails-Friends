<h2>Edit Profile</h2>

<%# flash.each do |key, value| %>
<%#= content_tag :div, value, class: "flash #{key}" %>
<%# end %>

<%= form_for(current_user, url: user_update_users_path, html: { method: :post }) do |f| %>
  <%#= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :about %><br />
    <%= f.text_field :about, autofocus: true, autocomplete: "about" %>
  </div>

  <div class="field">
    <%= f.label :gender %><br />
    <%= f.text_field :gender, autofocus: true, autocomplete: "gender" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
